<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card bg-white text-black">
      <div class="card-header pt-5">
        <h4 class="text-center">
          Account Register
        </h4>
      </div>
      <div class="card-body">
        <form action="/auth/logeo" method="POST">
          <div class="mb-3">
            <label for="name">Name:</label>
            <input
              type="text"
              class="form-control bg-white text-black"
              name="name"
              placeholder="Name"
              value="{{name}}"
            />
          </div>
          <div class="mb-3">
            <label for="email">Email:</label>
            <input
              type="email"
              class="form-control bg-white text-black" 
              name="email"
              placeholder="Email"
              value="{{email}}"
            />
          </div>
          <div class="mb-3">
            <label for="text">Phone:</label>
            <input
              type="phone"
              class="form-control bg-white text-black"
              name="phone"
              placeholder="Phone"
              value="{{phone}}"
            />
          </div>
          
          
          <button class="btn btn-success btn-block">
            Signup
          </button>
        </form>
      </div>
      <p class="text-center">Â¿Ya tienes una cuenta?
        <a href="/auth/signin" class="text-info">Login</a></p>
    </div>
  </div>
</div>